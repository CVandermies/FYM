{% extends "base.html.twig" %}

{% block body %}
    <article>
        <h2>{{ movie.title }}</h2>
            {% if movie.category is not null %}
                Dans la cat√©gorie
                <a href="{{ path('category_show', {id: movie.category.id}) }}">{{ movie.category.label }}</a>
            {% endif %}  
            <div class="content">
                <img src="{{ movie.image }}" alt="">
                
                <div>{{ movie.content | raw}}</div>
                <b>{{ movie.rating }} /5</b>

            </div>
        <a href="{{ path('movie_edit', {id: movie.id }) }}" class="btn btn-primary">Editer</a>
        <a href="{{ path('movie_del', {id: movie.id }) }}" class="btn btn-secondary">Supprimer</a>
    </article>
    
{% endblock %}